div.top
  display: flex
  width: 100%
  height: 100vh
  div
    width: 100%
    height: 100vh
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-align: center
    background-image: url("./img/house.jpg")
    background-repeat: no-repeat
    background-position: center center
    background-size: cover
    color: rgba(white, 0.7)

div.twitter
  display: flex
  justify-content: center
  width: 100%
  div
    padding: pad pad*2
    width: 30em
    height: 80vh

div.niconico
  display: flex
  justify-content: center
  width: 100%
  div
    padding: pad
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: center
    iframe
      margin: 5px

div.github
  margin: 1em 0
  padding: 1em 0
  display: flex
  justify-content: center
  flex-direction: row
  width: 100%
  background-color: black
  div.code
    display: flex
    justify-content: center
    align-items: center
    width: 70vw
    pre
      margin: 0
      padding: 0
      font-family: 'Source Code Pro', monospace
      font-style: italic
      text-shadow: 1px 1px 3px rgba(black, 0.9)
      font-size: 2vw * 1.2
      color: white
      code-kw
        color: purple
      code-op
        color: yellow
      code-paren
        color: blue
      code-const
        color: orange
      code-call
        color: green
  div.icon
    display: flex
    justify-content: center
    align-items: center
    width: 20vw
    img
      width: 16vw
      height: auto

div.form
  margin: 3em 0
  display: flex
  flex-direction: column
  justify-content: center
  width: 100%
  color: lighten(black, 40%)
  p
    margin: 0
    text-align: center

div.footer
  margin: 1em 0
  display: flex
  justify-content: center
  width: 100%
  div
    text-align: center
    font-size: 80%
    p
      margin: 0

.wow
  visibility: hidden
