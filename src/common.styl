fontsize = 16px
sand = lighten(#f3f0e0, 90%)
pad = 3vw

html, body, table
  font-family: 'Raleway', sans-serif;
  margin: 0 !important
  padding: 0 !important
  font-size: fontsize
  background-color: transparent

h1
  font-size: fontsize * 2
  margin: 0
  padding: 0

h2
  font-size: fontsize * 1.5
  font-weight: normal
  margin: 0
  padding: 0

a
  color: darken(yellowgreen, 20%)
  text-decoration: none

div.top
  div
    background-attachment: fixed
div.section
  div.image::after
    background-attachment: fixed

body.ios
  div.top
    div
      background-attachment: local
  div.section
    div.image::after
      background-attachment: local

div.section
  display: flex
  justify-content: center
  width: 100%
  div
    display: flex
    position: relative
    justify-content: center
    text-align: center
    flex-direction: column
  div.text
    margin: pad*2 0
  div.form
    align-items: center
    div
      width: 90%
  div.image
    h2
      color: rgba(white, 0.7)
      text-shadow: 1px 1px 3px rgba(black, 0.9)
  div.image::after
    content: ""
    background-repeat: no-repeat
    background-size: cover
    left: 0
    top: 0
    right: 0
    bottom: 0
    width: 100%
    height: 100%
    position: absolute
    z-index: -1
  &.sirius
    div.image::after
      background-image: url("./img/sirius.jpg")
      background-position: center center
  &.town
    div.image::after
      background-image: url("./img/town.jpg")
      background-position: center center
  &.sea
    div.image::after
      background-image: url("./img/sea.jpg")
      background-position: center center

